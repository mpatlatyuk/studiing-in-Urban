def single_root_words(root_word, *other_words) -> list:
    """ф-я, создающая список однокоренных слов"""

    same_words = []
    root_word = root_word.lower()
    other_words = list(other_words)
    same_words = [w.lower() for w in other_words]

    for w in other_words:
        if root_word not in w:
            same_words == same_words.extend(w)


    return same_words


result1 = single_root_words('rich', 'richiest', 'orichalcum', 'cheers', 'richies')
result2 = single_root_words('Disablement', 'Able', 'Mable', 'Disable', 'Bagel')
print(result1)
print(result2)
